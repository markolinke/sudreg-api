{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug run.py",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/run.py",
        "cwd": "${workspaceFolder}",
        "envFile": "${workspaceFolder}/.env",
        "console": "integratedTerminal"
      },
      {
        "name": "Debug current file",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "cwd": "${fileDirname}",
        "envFile": "${workspaceFolder}/.env"
      }
    ]
  }
  